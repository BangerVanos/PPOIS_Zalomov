StudentsAppMainWidget:
    orientation: "vertical"
    spacing: 15
    padding: 100
    MDLabel:
        text: "Выберите дейтсвие из списка ниже"
        halign: "center"
    MDRectangleFlatButton:
        text: "Список всех студентов"
        pos_hint: {'center_x': .5, 'center_y': 1.}
        size_hint: .7,.2
    MDRectangleFlatButton:
        text: "Добавить студента в список"
        pos_hint: {'center_x': .5, 'center_y': 1.}
        size_hint: .7,.2
        on_release: root.show_add_dialog()
    MDRectangleFlatButton:
        text: "Поиск студентов по параметрам"
        pos_hint: {'center_x': .5, 'center_y': 1.}
        size_hint: .7,.2
        on_release: root.show_find_dialog()
    MDRectangleFlatButton:
        text: "Удаление студентов по параметрам"
        pos_hint: {'center_x': .5, 'center_y': 1.}
        size_hint: .7,.2

StudentsScreenManager:
    StudentsAppMainScreen:
    AddStudentScreen:
<AddStudentScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        padding: 50
        spacing: 10
        MDLabel:
            adaptive_size: True
            size_hint: 1.,.05
            text: "Добавить нового студента"
            font_size: 48
        MDGridLayout:
            size_hint: 1.,.9
            rows: 7
            cols: 2
            padding: 50
            spacing: 20
            adaptive_height: True
            MDLabel:
                halign: "center"
                text: "Фамилия"
                pos_hint: .1,1.
            MDTextField:
                id: last_name
                mode: "rectangle"
                hint_text: "Фамилия студента"
                max_text_length: 100
                required: True
                multiline: False
            MDLabel:
                halign: "center"
                text: "Имя"
            MDTextField:
                id: first_name
                mode: "rectangle"
                hint_text: "Имя студента"
                max_text_length: 100
                required: True
                multiline: False
            MDLabel:
                halign: "center"
                text: "Отчество"
            MDTextField:
                id: middle_name
                mode: "rectangle"
                hint_text: "Отчество студента (необязательно)"
                max_text_length: 100
                multiline: False
            MDLabel:
                halign: "center"
                text: "Номер группы"
            MDTextField:
                id: group_number
                mode: "rectangle"
                hint_text: "Номер группы студента (необязательно)"
                max_text_length: 10
                multiline: False
            MDLabel:
                halign: "center"
                text: "Пропуски по болезни"
            MDTextField:
                id: illness_hours
                mode: "rectangle"
                hint_text: "Пропуски по болезни"
                input_filter: "int"
                multiline: False
            MDLabel:
                halign: "center"
                text: "Пропуски по уважительным причинам"
            MDTextField:
                id: other_hours
                mode: "rectangle"
                hint_text: "Пропуски по уважительной причине"
                input_filter: "int"
                multiline: False
            MDLabel:
                halign: "center"
                text: "Пропуски по неуважительным причинам"
            MDTextField:
                id: bad_hours
                mode: "rectangle"
                hint_text: "Пропуски по неуважительной причине"
                input_filter: "int"
                multiline: False
        MDBoxLayout:
            size_hint: 1.,.05
            orientation: 'horizontal'
            spacing: 50
            MDRectangleFlatButton:
                adaptive_size: True
                size_hint: .3,.3
                pos_hint: {'pos_hint_x': .5, 'pos_hint_y': .5}
                text: "Добавить"
                on_release: root.send_add_data()
            MDRectangleFlatButton:
                adaptive_size: True
                size_hint: .3,.3
                pos_hint: {'pos_hint_x': .5, 'pos_hint_y': .5}
                text: "Отмена"
                on_release: root.manager.current = 'main'
StudentsScreenManager:
    StudentsAppMainScreen:
    AddStudentScreen:
<StudentsAppMainScreen>:
    MDBoxLayout:
        orientation: "vertical"
        spacing: 15
        padding: 100
        MDLabel:
            text: "Выберите дейтсвие из списка ниже"
            halign: "center"
            font_size: 36
        MDRectangleFlatButton:
            text: "Список всех студентов"
            pos_hint: {'center_x': .5, 'center_y': 1.}
            size_hint: .7,.2
            on_release: root.show_all_dialog()
            font_size: 20
        MDRectangleFlatButton:
            text: "Добавить студента в список"
            pos_hint: {'center_x': .5, 'center_y': 1.}
            size_hint: .7,.2
            on_release: root.manager.current = 'add_student'
            font_size: 20
        MDRectangleFlatButton:
            text: "Поиск студентов по параметрам"
            pos_hint: {'center_x': .5, 'center_y': 1.}
            size_hint: .7,.2
            on_release: root.show_find_dialog()
            font_size: 20
        MDRectangleFlatButton:
            text: "Удаление студентов по параметрам"
            pos_hint: {'center_x': .5, 'center_y': 1.}
            size_hint: .7,.2
            font_size: 20

AddDialogWidget:
    cols: 7
    padding: 50
    adaptive_height: True
    spacing: 20
    MDLabel:
        halign: "center"
        text: "Фамилия"
    MDLabel:
        halign: "center"
        text: "Имя"
    MDLabel:
        halign: "center"
        text: "Отчество"
    MDLabel:
        halign: "center"
        text: "Номер группы"
    MDLabel:
        halign: "center"
        text: "Пропуски по болезни"
    MDLabel:
        halign: "center"
        text: "Пропуски по уважительным причинам"
    MDLabel:
        halign: "center"
        text: "Пропуски по неуважительным причинам"
    MDTextField:
        id: last_name
        mode: "rectangle"
        hint_text: "Фамилия студента"
        max_text_length: 100
        required: True
    MDTextField:
        id: first_name
        mode: "rectangle"
        hint_text: "Имя студента"
        max_text_length: 100
        required: True
        size_hint: .9,.9
    MDTextField:
        id: middle_name
        mode: "rectangle"
        hint_text: "Отчество студента (необязательно)"
        max_text_length: 100
        size_hint: .9,.9
    MDTextField:
        id: group_number
        mode: "rectangle"
        hint_text: "Номер группы студента (необязательно)"
        max_text_length: 10
        size_hint: .9,.9
    MDTextField:
        id: illness_hours
        mode: "rectangle"
        hint_text: "Пропуски по болезни"
        input_filter: "int"
        size_hint: .9,.9
    MDTextField:
        id: other_hours
        mode: "rectangle"
        hint_text: "Пропуски по уважительной причине"
        input_filter: "int"
        size_hint: .9,.9
    MDTextField:
        id: bad_hours
        mode: "rectangle"
        hint_text: "Пропуски по неуважительной причине"
        input_filter: "int"
        size_hint: .9,.9